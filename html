            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .add-card-form input,
        .add-card-form button {
            padding: 10px;
            font-size: 1em;
            border-radius: 8px;
            border: 1px solid #ddd;
        }
        
        .add-card-form input:focus {
            outline: none;
            border-color: #007bff;
        }

        .add-card-form button {
            background-color: #28a745;
            color: white;
            cursor: pointer;
            border: none;
        }

        .add-card-form button:hover {
            background-color: #218838;
        }

        .message {
            margin-top: 10px;
            font-size: 0.9em;
            text-align: center;
        }

        .message.success {
            color: #28a745;
        }

        .message.error {
            color: #dc3545;
        }

        /* Small screen adjustments */
